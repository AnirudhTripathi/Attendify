<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Attendance_Taking">

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerViewAttendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/item_attendance_button"
    android:padding="8dp"
    android:clipToPadding="false"
    android:background="@android:color/white"
    android:columnCount="4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/done_attendance"
        android:layout_width="56dp"
        android:layout_height="62dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="26dp"
        android:backgroundTint="@color/purple_200"
        app:layout_anchor="@id/recyclerViewAttendance"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/baseline_cloud_done_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
